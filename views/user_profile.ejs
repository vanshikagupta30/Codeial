        <!-- hmne yha vo img dekhani h vo user ne upload kri hui h -->
        <img src="<%- user.avatar %>" alt="<%= user.name %>" width="100">

        <!-- hmne plhe yha bs user.name krke likha tha taki hmari user profile pr name and email show kr jye abhi bhi same hi kiya h bs hmne uska name change krke profile_user.name kr diya taki hm use ani home pr dekha sake kon kon se user login the, vahi se access kr sake taki hm -->
